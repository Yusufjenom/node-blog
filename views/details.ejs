<html lang="en">
<%- include('../templates/header.ejs') %>

<body>
<%- include('../templates/nav.ejs') %>
    <!-- <main> -->
    <div class="container">
        <div class="row main">
            <h1>Details</h1>
            <div class="blog-content">
              <p>
                <h2><%= blog.title %></h2>
                <p><%= blog.body %></p>
              </p>
              <br><br>
                 
              
                    <form action="/delete" method="post">
                        <label for="delete">Click to Delete</label>
                        <input type="checkbox" name="checkbox" value="<%= blog._id %>" 
                        onchange="this.form.submit()" id="delete">
                     
                    </form>
                
                 
             </div>
        </div>
    </div>
    
<%- include('../templates/footer.ejs') %>

 
<script>
    const del = document.querySelector('a.delete')
    del.addEventListener('click', (e)=>{
     const delTrash = `/blogs/${del.href}`
     fetch(delTrash, {
     method: 'DELETE'
 })
 .then((response)=>{
     response.json()
 })
 .then((data)=>{
     window.location.href = data.redirect
 })
 .catch((err)=>{
     console.log(err)
 })
 })
</script>

</body>
</html>